<!--================login Area =================-->
<section class="login_area p_100" >
    <div class="container" >
        <div class="login_inner" >
     
        <div class="row">
            <div class="col-lg-4">

                <%if(typeof flashMessage !=='undefined') {%>
                    <div class="alert alert-danger" role="alert"><%=flashMessage%></div>
                <%}%>

                <div class="login_title">
                    <h2>log in your account</h2>
                    <p>Log in to your account to discovery all great features in this template.</p>
                </div>

                <form role="form" action="" id="login_form" method="post" class="login_form row">
                    <div class="col-lg-12 form-group">
                        <input class="form-control" placeholder="ID" name="username" type="text" autofocus="" >
                    </div>
                    <div class="col-lg-12 form-group">
                        <input class="form-control" placeholder="Password" name="password" type="password" value="" >
                    </div>
                    <div class="col-lg-12 form-group">
                        <div class="creat_account">
                            <input type="checkbox" id="f-option" name="selector">
                            <label for="f-option">Keep me logged in</label>
                            <div class="check"></div>
                        </div>
                        <h4>Forgot your password ?</h4>
                    </div>
                    <div class="col-lg-12 form-group">
                        <button type="submit" value="submit" class="btn update_btn form-control">Login</button>
                        
                        <div style="margin-top: 10px; float:right;" >
                            <p>소셜로 간편 로그인하기</p>       
                            <a href="/auth/naver"><img src="/img/sns-icon/naver.gif" style="width:50px;"></a>
                            <a href="/auth/kakao"><img src="/img/sns-icon/kakao.gif" style="width:50px;"></a>
                            <a href="/auth/facebook"><img src="/img/sns-icon/facebook.gif" style="width:50px;"></a>
                            <p style="color:#999999;">facebook로그인시 http로</p>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-8" style="border:1px solid red"></div>
        </div> 
    
        </div>
    </div>
</section>
