<% layout('../layout/layout')%>

 <table class="table table-hover">
    <thead>
      <tr>
        <th>제목</th>
        <th>작성일</th>
        <th>삭제</th>
      </tr>
    </thead>
    <tbody>
    <% products.forEach( function(product){ %>
        <tr>
            <td>
                <a href="/admin/products/detail/<%=product.id%>"><%=product.name%></a>
            </td>
            <td>
                <%=product.getDate.year%>-
                <%=product.getDate.month%>-
                <%=product.getDate.day%>
            </td>
            <td>
                <a href="/admin/products/delete/<%=product.id%>" class="btn btn-danger"
                onclick="return confirm('삭제하시겠습니까?')">삭제</a>
            </td>
        </tr>
        <%});%>
    </tbody>
  </table>

  <nav style="font-size:16px;">
      <ul class="pagination">
          <li>
              <a href="<%= paginate.href(true) %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
              </a>
          </li>
      <% pages.forEach(function(page){ %>
          <li class="<%= paginate.page == page.number ? 'active' : ''%>">
              <a href="<%= page.url %>"><%= page.number %></a>
          </li>
      <%})%>

      <%if(paginate.hasNextPages(pageCount)){%>
          <li>
              <a href="<%= paginate.href() %>">
                  <span aria-hidden="true">&raquo;</span>
              </a>
          </li>
      <%}%>
      </ul>
  </nav>

<a href="/admin/products/write" class="btn btn-default">작성하기</a>
<style>
ul > li {
    border-top:1px solid #a8b0e6;
    border-bottom:1px solid #a8b0e6;
    border-right:1px solid #a8b0e6;
    width:20px;
    text-align:center;
}
ul > li:first-child{
    border:1px solid #a8b0e6;
    background-color:#f1f1f1;
    border-radius:5px 0 0 5px;
}
ul > li:last-child{
    border-top:1px solid #a8b0e6;
    border-bottom:1px solid #a8b0e6;
    border-right:1px solid #a8b0e6;
    background-color:#f1f1f1;
    border-radius:0 5px 5px 0;
}
</style>
